<main id="add-car">
  <div>
    <a>Cars</a>
    <svg
      width="16"
      height="16"
      viewBox="0 0 16 16"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
    >
      <path
        d="M6 12L10 8L6 4"
        stroke="#222222"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      />
    </svg>
    <a href="/cars">List Car</a>
    <svg
      width="16"
      height="16"
      viewBox="0 0 16 16"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
    >
      <path
        d="M6 12L10 8L6 4"
        stroke="#222222"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      />
    </svg>
    <a href="/edit-car">Edit Car</a>
  </div>
  <div>
    <h4><%= car.name %></h4>
  </div>
  <form method="POST" action="/cars/<%= car.id %>">
    <div>
      <div>
        <label for="name">Nama<span>*</span></label>
        <input
          type="text"
          id="name"
          name="name"
          placeholder="Placeholder"
          value="<%= car.name %>"
          required
        />
      </div>
      <div>
        <label for="price">Harga<span>*</span></label>
        <input
          type="number"
          id="price"
          name="price"
          placeholder="Placeholder"
          value="<%= car.price %>"
          required
        />
      </div>
      <div>
        <label for="image">Foto<span>*</span></label>
        <div>
          <div>
            <svg
              width="18"
              height="18"
              viewBox="0 0 18 18"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                d="M15.75 11.25V14.25C15.75 14.6478 15.592 15.0294 15.3107 15.3107C15.0294 15.592 14.6478 15.75 14.25 15.75H3.75C3.35218 15.75 2.97064 15.592 2.68934 15.3107C2.40804 15.0294 2.25 14.6478 2.25 14.25V11.25"
                stroke="#8A8A8A"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              />
              <path
                d="M12.75 6L9 2.25L5.25 6"
                stroke="#8A8A8A"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              />
              <path
                d="M9 2.25V11.25"
                stroke="#8A8A8A"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              />
            </svg>
            <input
              id="image"
              name="image"
              placeholder="input link image"
              value="<%= car.image %>"
              required
            />
          </div>
          <p>File size max. 2MB</p>
        </div>
      </div>
      <div>
        <label>Start Rent</label>
        <p>-</p>
      </div>
      <div>
        <label>Finish Rent</label>
        <p>-</p>
      </div>
      <div>
        <label>Created at</label>
        <p>-</p>
      </div>
      <div>
        <label>Updated at</label>
        <p>-</p>
      </div>
    </div>
    <div>
      <button type="button">Cancel</button>
      <button type="submit">Save</button>
    </div>
  </form>
</main>
